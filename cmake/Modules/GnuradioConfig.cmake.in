include(CMakeFindDependencyMacro)

# Allows us to use all .cmake files in this directory
list(INSERT CMAKE_MODULE_PATH 0 "${CMAKE_CURRENT_LIST_DIR}")

# Easily access all libraries and includes of GNU Radio
set(GNURADIO_ALL_LIBRARIES "")
set(GNURADIO_ALL_INCLUDE_DIRS "")

foreach(component ${GNURADIO_FIND_COMPONENTS})
if(not target gnuradio::gnuradio-${component})
  include("${GNURADIO_CMAKE_DIR}/gnuradio-${component}Targets.cmake")
endif()
endforeach(component)
